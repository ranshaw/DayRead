/*flex*/
.app-flex1{
  flex:1;
}
.app-flex-row{
  display:flex;
  flex-direction:row;
}
.app-flex-column{
  display:flex;
  flex-direction:column;
}
.app-flex-center{
  align-items:center;
  justify-content:center;
}
.app-cross-center{
  align-items:center;
}
.app-space-between{
  justify-content:space-between;
}

