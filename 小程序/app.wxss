.container {
  font-size:28rpx;
}
.app-full {
  width:100%;
  height:100%;
}

/*文本*/
.app-font-xs {
  font-size: 20rpx;
}
.app-font-sm {
  font-size:24rpx;
}
.app-font-default{
  font-size:28rpx;
}
.app-font-lg {
  font-size:36rpx;
}
.app-font-xl {
  font-size:48rpx;
}
.app-line-through {
  text-decoration:line-through;
}


.app-ellipsis {
  overflow:hidden;
  text-overflow:ellipsis;
  white-space:nowrap;
}
.app-ellipsis-2line {
  overflow:hidden;
  text-overflow:ellipsis;
  display: -webkit-box;
  -webkit-line-clamp:2;
  -webkit-box-orient: vertical;
}

